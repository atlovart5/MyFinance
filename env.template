# FinBot Environment Configuration
# Copy this file to .env and fill in your values

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here

# Optional: Override default settings
# OPENAI_MODEL=gpt-4.1-nano  # Modelo padrão - mais rápido e econômico
# OPENAI_TEMPERATURE=0.0
# MAX_TOKENS=4000

# Rate Limiting (optional)
# MAX_API_CALLS=10
# RATE_LIMIT_WINDOW=60

# Caching (optional)
# CACHE_ENABLED=true
# CACHE_TTL=3600

# Logging (optional)
# LOG_LEVEL=INFO

# Security (optional)
# ALLOW_DANGEROUS_CODE=true  # Required for chatbot functionality
# MAX_INPUT_LENGTH=1000
# VALIDATE_FILE_PATHS=true

# IMPORTANT: For chatbot functionality to work, you must set:
# ALLOW_DANGEROUS_CODE=true
# This allows the AI to execute Python code for data analysis 